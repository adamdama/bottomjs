<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system">
	<name>plg_system_bottomjs</name>
	<author>Adam Cox</author>
	<creationDate>July 2012</creationDate>
	<copyright>Copyright (C) 20012 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>adamdama@hotmail.com</authorEmail>
	<authorUrl>www.adamjcox.co.uk</authorUrl>
	<version>2.5.0</version>
	<description>PLG_SYSTEM_BOTTOMJS_XML_DESCRIPTION</description>
	<files>
		<filename plugin="bottomjs">bottomjs.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_system_bottomjs.ini</language>
		<language tag="en-GB">en-GB.plg_system_bottomjs.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="JS">
				<field
					name="move_js"
					type="radio"
					label="PLG_SYSTEM_BOTTOMJS_FIELD_MOVE_JS_LABEL"
					description="PLG_SYSTEM_BOTTOMJS_FIELD_MOVE_JS_DESC"
					default="1">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="insert_at"
					type="list"
					label="PLG_SYSTEM_BOTTOMJS_FIELD_INSERT_AT_LABEL"
					description="PLG_SYSTEM_BOTTOMJS_FIELD_INSERT_AT_DESC"
					default="eb">
					<option value="bh">PLG_SYSTEM_BOTTOMJS_OPTION_INSERT_AT_START_HEAD</option>
					<option value="eh">PLG_SYSTEM_BOTTOMJS_OPTION_INSERT_AT_END_HEAD</option>
					<option value="bb">PLG_SYSTEM_BOTTOMJS_OPTION_INSERT_AT_START_BODY</option>
					<option value="eb">PLG_SYSTEM_BOTTOMJS_OPTION_INSERT_AT_END_BODY</option>
				</field>
				<field
					name="order"
					type="list"
					label="PLG_SYSTEM_BOTTOMJS_FIELD_ORDER_LABEL"
					description="PLG_SYSTEM_BOTTOMJS_FIELD_ORDER_DESC"
					default="-1">
					<option value="-1">PLG_SYSTEM_BOTTOMJS_OPTION_ORDER_BEFORE</option>
					<option value="1">PLG_SYSTEM_BOTTOMJS_OPTION_ORDER_AFTER</option>
				</field>
				<field
					name="ignore_empty"
					type="radio"
					label="PLG_SYSTEM_BOTTOMJS_FIELD_IGNORE_EMPTY_LABEL"
					description="PLG_SYSTEM_BOTTOMJS_FIELD_IGNORE_EMPTY_DESC"
					default="1">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="resolve_duplicates"
					type="radio"
					label="PLG_SYSTEM_BOTTOMJS_FIELD_RESOLVE_DUPLICATES_LABEL"
					description="PLG_SYSTEM_BOTTOMJS_FIELD_RESOLVE_DUPLICATES_DESC"
					default="1">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="ignore_list"
					type="textarea"
					cols="60"
					rows="5"
					label="PLG_SYSTEM_BOTTOMJS_FIELD_IGNORE_LIST_LABEL"
					description="PLG_SYSTEM_BOTTOMJS_FIELD_IGNORE_LIST_DESC"
					default="" />
				<field
					name="minify_js"
					type="radio"
					label="PLG_SYSTEM_BOTTOMJS_FIELD_MINIFY_JS_LABEL"
					description="PLG_SYSTEM_BOTTOMJS_FIELD_MINIFY_JS_DESC"
					default="1">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="remove_mootools"
					type="radio"
					label="PLG_SYSTEM_BOTTOMJS_FIELD_REMOVE_MOOTOOLS_LABEL"
					description="PLG_SYSTEM_BOTTOMJS_FIELD_REMOVE_MOOTOOLS_DESC"
					default="1">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
			<fieldset name="CSS">
				<field
					name="move_css"
					type="radio"
					label="PLG_SYSTEM_BOTTOMJS_FIELD_MOVE_CSS_LABEL"
					description="PLG_SYSTEM_BOTTOMJS_FIELD_MOVE_CSS_DESC"
					default="1">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
				<field
					name="minify_css"
					type="radio"
					label="PLG_SYSTEM_BOTTOMJS_FIELD_MINIFY_CSS_LABEL"
					description="PLG_SYSTEM_BOTTOMJS_FIELD_MINIFY_CSS_DESC"
					default="1">
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
